<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

  <include android:id="@+id/action_bar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           layout="@layout/include_action_bar"/>

  <ScrollView
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:scrollbars="none">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

      <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/layout_normal">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

          <TextView
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="@dimen/t_xxxl"
                  android:textColor="@color/common_text_color_2"
                  android:text="省"
                  android:visibility="gone"/>

          <com.palmap.BluetoothUtils.widget.widget.WheelView
                  android:id="@+id/mall_select_province"
                  android:layout_width="fill_parent"
                  android:layout_height="150dp"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/layout_large">

          <TextView
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="@dimen/t_xxxl"
                  android:textColor="@color/common_text_color_2"
                  android:text="城市"
                  android:visibility="gone"/>

          <com.palmap.BluetoothUtils.widget.widget.WheelView
                  android:id="@+id/mall_select_city"
                  android:layout_width="fill_parent"
                  android:layout_height="150dp"/>

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/layout_normal">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

          <TextView
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="@dimen/t_xxxl"
                  android:textColor="@color/common_text_color_2"
                  android:text="地区"
                  android:visibility="gone"/>

          <com.palmap.BluetoothUtils.widget.widget.WheelView
                  android:id="@+id/mall_select_region"
                  android:layout_width="fill_parent"
                  android:layout_height="150dp"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/layout_large">

          <TextView
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="@dimen/t_xxxl"
                  android:textColor="@color/common_text_color_2"
                  android:text="商场"
                  android:visibility="gone"/>

          <com.palmap.BluetoothUtils.widget.widget.WheelView
                  android:id="@+id/mall_select_mall"
                  android:layout_width="fill_parent"
                  android:layout_height="150dp"/>

        </LinearLayout>

      </LinearLayout>
      
      <TextView 
              android:id="@+id/mall_select_entry"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:padding="@dimen/layout_normal"
              android:layout_marginLeft="40dp"
              android:layout_marginRight="40dp"
              android:gravity="center"
              android:textSize="@dimen/t_xxxl"
              android:textColor="@color/white"
              android:text="进入地图"
              android:background="@drawable/btn_bg_shape" />
      <TextView
          android:id="@+id/mall_select_history"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:padding="@dimen/layout_normal"
          android:layout_marginLeft="40dp"
          android:layout_marginRight="40dp"
          android:gravity="center"
          android:textSize="@dimen/t_xxxl"
          android:textColor="@color/white"
          android:text="巡检记录"
          android:background="@drawable/btn_bg_shape"
          android:layout_marginTop="5dp" />
      <TextView
          android:id="@+id/mall_select_download"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:padding="@dimen/layout_normal"
          android:layout_marginLeft="40dp"
          android:layout_marginRight="40dp"
          android:gravity="center"
          android:textSize="@dimen/t_xxxl"
          android:textColor="@color/white"
          android:text="离线下载"
          android:background="@drawable/btn_bg_shape"
          android:layout_marginTop="5dp" />

    </LinearLayout>

  </ScrollView>

</LinearLayout>